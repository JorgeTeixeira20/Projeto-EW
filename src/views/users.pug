extends layout-main

block content
  style.
    .main-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      margin-top: 100px;
    }
    .main-title {
      background-color: #1fd761;
      width: 350px;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      margin-bottom: 20px;
      text-align: center;
    }
    .user-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
      width: 90%;
      max-width: 1200px;
    }
    .user-item {
      background-color: #444;
      padding: 20px;
      border-radius: 5px;
      color: #fff;
      position: relative; /* Add this for positioning buttons */
    }
    .user-item:hover {
      color: #1fd761;
      cursor: pointer;
    }
    .user-item h3 {
      margin: 0 0 10px;
    }
    .user-item p {
      margin: 5px 0;
    }
    .remove-button,
    .make-admin-button {
      background-color: #ff4d4d;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    .remove-button:hover,
    .make-admin-button:hover {
      background-color: #ff1a1a;
    }
    .make-admin-button {
      margin-left: 10px; /* Adjust spacing between buttons */
    }
  .main-container
    .main-title
      h1 Lista de Usuários
    if users.length
      .user-list
        each user in users
          .user-item
            .column
              h3= user.firstName + ' ' + user.lastName
              p Email: #{user.email}
              p Role: #{user.role}
              p Admin: #{user.admin ? 'Sim' : 'Não'}
            .column
              p Curso: #{user.course}
              p Departamento: #{user.department}
              p Data de Registro: #{user.registrationDate.toDateString()}
              p Último Acesso: #{user.lastAccessDate.toDateString()}
            form(action=`/users/${user._id}?_method=DELETE` method="POST")
              button.remove-button(type="submit") Remover
              form(action=`/users/${user._id}/admin?_method=PUT` method="POST")
                button.make-admin-button(type="submit") #{user.admin ? 'Remover Admin' : 'Tornar Admin'}
    else
      p Nenhum usuário encontrado
