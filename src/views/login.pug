extends layout

block content
  style.
    .login-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px; /* Espa√ßo entre os elementos */
    }
    .login-title {
      background-color: #1fd761; /* Cor de fundo da caixa */
      width: 350px;
      color: white;
      padding: 10px 20px;
      border-radius: 5px;
      margin-bottom: 20px;
    }
    .login-container .form-group {
      width: 300px;
    }
    .login-container .form-group label {
      color: white;
    }
    .btn-container {
      display: flex;
      justify-content: space-between;
      width: 100%;
      max-width: 320px;
    }
    .btn-login {
      background-color: #1fd761;
      border-color: #1fd761;
      border-radius: 3%;
      color: white;
      margin-top: 20px;
      border-width: 2px;
      flex: 1;
      margin-right: 10px;
    }
    .btn-back {
      background-color: #6c757d;
      border-color: #6c757d;
      border-radius: 3%;
      color: white;
      margin-top: 20px;
      border-width: 2px;
      flex: 1;
      margin-left: 10px;
    }
  .login-container
    .login-title
      h1 Login
    if success_msg
      .alert.alert-success #{success_msg}
    if error_msg
      .alert.alert-danger #{error_msg}
    form(action='/auth/login', method='post')
      .form-group
        label(for='email') Email
        input#email.form-control(name='email', type='text')
      .form-group
        label(for='password') Password
        input#password.form-control(name='password', type='password')
      .btn-container
        button.btn.btn-login(type='submit') Login
        a.btn.btn-back(href='/auth') Return
